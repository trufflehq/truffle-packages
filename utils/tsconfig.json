{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "preact.h",
    "jsxFragmentFactory": "preact.Fragment",
    "allowJs": true,
    "checkJs": true,
    // "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "target": "ESNext",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "include": ["**/*"],
  "typeAcquisition": {
    "enable": true
  }
}
