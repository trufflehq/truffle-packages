{
  "name": "@trufflehq/transframe",
  "version": "0.0.20",
  "description": "A library for creating apis for frames",
  "keywords": [
    "truffle"
  ],
  "author": "Spore Labs, Inc.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist",
    "background-script",
    "iframe"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./iframe": {
      "import": "./dist/esm/interfaces/iframe/index.js",
      "require": "./dist/cjs/interfaces/iframe/index.js",
      "types": "./dist/esm/interfaces/iframe/index.d.ts"
    },
    "./background-script": {
      "import": "./dist/esm/interfaces/background-script/index.js",
      "require": "./dist/cjs/interfaces/background-script/index.js",
      "types": "./dist/esm/interfaces/background-script/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig/tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig/tsconfig.cjs.json",
    "build": "npm run clean && npm run build:esm ; npm run build:cjs",
    "watch": "npm run watch:cjs",
    "watch:esm": "tsc -p tsconfig/tsconfig.esm.json --watch",
    "watch:cjs": "tsc -p tsconfig/tsconfig.cjs.json --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/webextension-polyfill": "^0.10.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "peerDependenciesMeta": {
    "webextension-polyfill": {
      "optional": true
    }
  }
}
