{
  "name": "@trufflehq/jumper",
  "version": "0.2.0",
  "description": "A generic cross-frame communication library",
  "keywords": [
    "truffle"
  ],
  "author": "Spore Labs, Inc.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig/tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig/tsconfig.cjs.json",
    "build": "npm run clean && npm run build:esm ; npm run build:cjs",
    "watch": "npm run watch:cjs",
    "watch:esm": "tsc -p tsconfig/tsconfig.esm.json --watch",
    "watch:cjs": "tsc -p tsconfig/tsconfig.cjs.json --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  }
}
